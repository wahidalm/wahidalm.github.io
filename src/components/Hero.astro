---
export interface Props {
  name: string;
  title: string;
  email: string;
  location: string;
  img: string;
}

const { name, title, email, location, img } = Astro.props;
---

<section class="hero">
  <div class="card">
    <img src={img} alt={name} class="avatar" />
    <h1>{name}</h1>
    <p class="title">{title}</p>
    <p class="email">
      <code>Email:</code>
      <a href="”mailto:wahiduzalam@gmail.com”">wahiduzalam@gmail.com</a>
    </p>
    <p class="location"><code>Address:</code> {location}</p>
    <a href="/cv.pdf" class="btn">Download CV</a>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    place-items: center;
    padding: 1rem;
    /* animated gradient background */
    background: linear-gradient(-45deg, #ff9a9dbb, #fecfefb0, #a8ede9a1, #fed6e38f);
    background-size: 400% 400%;
    animation: bg 10s ease infinite;
  }
  @keyframes bg {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .card {
    width: 90%;
    max-width: 400px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1.5rem;
    padding: clamp(1.5rem, 5vw, 3rem);
    text-align: center;
    color: #111;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.7);
  }

  html.dark .card {
    background: rgba(0, 0, 0, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .avatar {
    width: clamp(80px, 40vw, 220px); 
    height: clamp(80px, 40vw, 220px);
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 1rem;
    border: 4px solid rgba(255, 255, 255, 0.5);
  }
  html.dark .avatar {
    border: 4px solid rgba(255, 255, 255, 0.2);
  }

  h1 {
    margin: 0;
    font-size: clamp(1.5rem, 6vw, 2.2rem);
  }
  .title {
    margin: 0.5rem 0 1rem;
    font-size: clamp(1rem, 10vw, 1.8rem);
    opacity: 0.95;
    color: #1c1a19;
  }
  .location {
    margin: 2;
    font-size: clamp(0.8rem, 2.5vw, 1rem);
    opacity: 0.75;
    text-align: left;
    padding-left: 20%;
  }
  .email {
    margin: 2;
    font-size: clamp(0.8rem, 2.5vw, 1rem);
    opacity: 0.75;
    text-align: left;
    padding-left: 20%;
  }
</style>
