---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
  <nav>
    <!-- Left: logo -->
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <!-- Middle: desktop nav -->
    <div id="nav-menu" class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="#about">About</HeaderLink>
      <HeaderLink href="#exp">Experience</HeaderLink>
      <HeaderLink href="#projects">Project</HeaderLink>
      <HeaderLink href="#contact">Contact</HeaderLink>
    </div>

    <!-- Right: theme + hamburger -->
    <div class="nav-actions">
      <ThemeToggle />
      <button id="menu-toggle" aria-label="Open menu" aria-expanded="false">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>
  </nav>
</header>

<style>
  
/* ---------- outer box ---------- */
header {
  position: sticky;
  top: 0;
  z-index: 50;
  height: 50px;
  background: rgba(62, 56, 56, 0.81);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--border);
  display: flex;
  align-items: center;
  padding: 0 1.5rem;
}
nav {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
h2 { margin: 0; font-size: 1.1em; }
h2 a { text-decoration: none; color: var(--text); }

/* ---------- desktop nav ---------- */
.internal-links {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.internal-links a {
  padding: 0.25rem 0.5rem;
  color: var(--text);
  text-decoration: none;
  white-space: nowrap;
}

/* ---------- actions ---------- */
.nav-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* ---------- hamburger ---------- */
#menu-toggle {
  display: none;            /* hidden on big screens */
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 32px;
  height: 32px;
  background: none;
  border: none;
  cursor: pointer;
}
#menu-toggle .bar {
  width: 22px;
  height: 2px;
  background: var(--text);
  margin: 3px 0;
  transition: 0.3s;
}

/* ---------- mobile ---------- */
@media (max-width: 768px) {
  #menu-toggle { display: flex; }     /* show burger */
  .internal-links {
    position: absolute;
    top: 50px; left: 0; right: 0;
    background: var(--bg);
    flex-direction: column;
    padding: 1rem 1.5rem 2rem;
    gap: 1rem;
    border-bottom: 1px solid var(--border);
    transform: translateY(-120%);
    transition: transform 0.3s ease;
    visibility: hidden; 
  }
  /* open state */
  .internal-links.open {
    transform: translateY(0);
    visibility: visible;
    background-color: rgb(159, 233, 249);
  }
  html.dark .internal-links.open {
    background-color: var(--bg);
}
</style>

<script>
  const btn  = document.getElementById('menu-toggle');
  const menu = document.getElementById('nav-menu');

  btn.addEventListener('click', () => {
    const open = menu.classList.toggle('open');
    btn.setAttribute('aria-expanded', String(open));
  });
  menu.querySelectorAll('a').forEach(a =>
  a.addEventListener('click', () => {
    menu.classList.remove('open');
    btn.setAttribute('aria-expanded', 'false');
  })
);
</script>