<style>
  :root{
  --card-bg: rgba(255,255,255,0.6);
  --card-border: rgba(255,255,255,0.4);
  --text: #111;
  --border: #ddd;
  --accent: #6366f1;
}
html.dark{
  --card-bg: rgba(0,0,0,0.25);
  --card-border: rgba(255,255,255,0.15);
  --text: #fff;
  --border: #444;
}
  .c-wrap{
    padding:4rem 1rem;
    display:grid;
    place-items:center;
    min-height:60vh;
    scroll-margin-top:10px;
  }
  .glass-card{
    width:100%;
    max-width:400px;
    background:rgba(14, 60, 200, 0.759);
    border:1px solid rgba(255,255,255,0.4);
    border-radius:24px;
    padding:2.5rem 2rem;
    text-align:center;
    color:#333;
    box-shadow:0 8px 32px rgba(0,0,0,0.1);
    backdrop-filter:blur(8px);
    transition:transform .3s ease;
  }
  html.dark .glass-card{background:rgba(0,0,0,0.25);border:1px solid rgba(255,255,255,0.15);color:#fff}

  .emoji{font-size:2rem;display:inline-block;animation:wiggle 1.2s ease-in-out infinite}
  @keyframes wiggle{0%,100%{transform:rotate(-3deg)}50%{transform:rotate(3deg)}}

  h2{margin:.5rem 0 .25rem;font-size:1.5rem}
  p{margin:0 0 1.5rem;font-size:.9rem;opacity:.8}

  form{
    display:flex; flex-direction:column; gap:.60rem
  }
  textarea {
     resize: vertical; min-height: 5rem;
   }
  
  input,textarea{
    width:90%;
    padding:.75rem 1rem;
    margin-bottom:.75rem;
    border:none;
    border-radius:12px;
    background:rgba(200, 191, 191, 0.7);
    color:#333;
    font-family:inherit;
    font-size:.9rem;
    transition:background .2s;
  }
  html.dark input,html.dark textarea{background:rgba(255,255,255,0.1);color:#ffffff97}
  input:focus,textarea:focus{outline:none;background:#ffffffa4}
  html.dark input:focus,html.dark textarea:focus{background:rgba(255,255,255,0.2)}

  button{
    width:100%;
    padding:.75rem;
    border:none;
    border-radius:12px;
    background:#4042d3;
    color:#fff;
    font-size:1rem;
    cursor:pointer;
    transition:background .2s,transform .1s;
  }
  button:hover{background:#5b46e5}
  button:active{transform:scale(.97)}

  .mail{
    display:inline-block;
    margin-top:1rem;
    font-size:.8rem;
    color:inherit;
    opacity:.8;
    text-decoration:none;
  }
  .mail:hover{opacity:1}

  @media (max-width:400px){
    .glass-card{padding:2rem 1.25rem}
    h2{font-size:1.3rem}
  }
</style>

<script>
  document.querySelector('button').addEventListener('click',function(e){
    const x = e.offsetX, y = e.offsetY;
    const ripple=document.createElement('span');
    ripple.style.cssText=`position:absolute;border-radius:50%;background:#fff3;left:${x}px;top:${y}px;width:1px;height:1px;animation:ripple .6s ease-out`;
    this.style.position='relative';this.appendChild(ripple);
    setTimeout(()=>ripple.remove(),600);
  });
</script>
<style>
  @keyframes ripple{to{width:160px;height:160px;opacity:0}}
</style>
</script>